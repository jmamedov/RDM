@* HierarchyTypeDialog.razor - Place in Components/Shared/ folder *@
@using RDM.Core.Entities

<div class="modal-overlay" @onclick="HandleCancel">
    <div class="modal-content" @onclick:stopPropagation="true">
        <h3 class="modal-title">@(HierarchyType == null ? "Add" : "Edit") Hierarchy Type</h3>

        <div class="form-group">
            <label class="form-label">Code *</label>
            <input type="text" class="form-input" @bind="code" required />
        </div>

        <div class="form-group">
            <label class="form-label">Name *</label>
            <input type="text" class="form-input" @bind="name" required />
        </div>

        <div class="form-group">
            <label class="form-label">Description</label>
            <textarea class="form-input" rows="3" @bind="description"></textarea>
        </div>

        <div class="modal-actions">
            <button class="btn btn-secondary" @onclick="HandleCancel">Cancel</button>
            <button class="btn btn-primary" @onclick="HandleSave">Save</button>
        </div>
    </div>
</div>

@code {
    [Parameter] public HierarchyType? HierarchyType { get; set; }
    [Parameter] public EventCallback<HierarchyType> OnSave { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private string code = "";
    private string name = "";
    private string? description;

    protected override void OnParametersSet()
    {
        if (HierarchyType != null)
        {
            code = HierarchyType.Code;
            name = HierarchyType.Name;
            description = HierarchyType.Description;
        }
        else
        {
            code = "";
            name = "";
            description = null;
        }
    }

    private async Task HandleSave()
    {
        if (string.IsNullOrWhiteSpace(code) || string.IsNullOrWhiteSpace(name))
        {
            return;
        }

        var hierarchyType = HierarchyType ?? new HierarchyType();
        hierarchyType.Code = code;
        hierarchyType.Name = name;
        hierarchyType.Description = description;

        await OnSave.InvokeAsync(hierarchyType);
    }

    private async Task HandleCancel()
    {
        await OnCancel.InvokeAsync();
    }
}